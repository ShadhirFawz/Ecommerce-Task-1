{
  "extends": [
    "next/core-web-vitals",
    "plugin:markdown/recommended-legacy",
    "plugin:vitest/recommended"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": "warn",
    "prefer-const": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "next-env.d.ts"
  ]
}